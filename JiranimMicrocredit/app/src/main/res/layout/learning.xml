<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:baselineAligned="false"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">
                <RelativeLayout
                    android:id="@+id/profile_layout"
                    android:layout_width="0dp"
                    android:padding="5dp"
                    android:layout_height="160dp"
                    android:layout_weight="1">

                    <ImageView
                        android:contentDescription="@drawable/ic_group_black_36dp"
                        android:id="@+id/img_thumbnail1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:layout_marginStart="60dp"
                        android:scaleType="fitXY"

                        android:background="@drawable/ic_group_black_36dp"
                        android:layout_above="@+id/tv_item_profile" />
                    <TextView
                        android:id="@+id/tv_item_profile"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:paddingLeft="50dp"
                        android:paddingRight="2dp"
                        android:paddingStart="50dp"
                        android:paddingEnd="2dp"
                        android:layout_gravity="bottom"
                        android:gravity="center_vertical"
                        android:layout_marginTop="20dp"

                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:text="@string/my_profile"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/top_income_layout"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:padding="5dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/img_thumbnail"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:layout_marginStart="60dp"

                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_account_balance_wallet_black_48dp"
                        android:contentDescription="@drawable/ic_account_balance_wallet_black_48dp"
                        android:scaleType="fitXY"
                        android:layout_above="@+id/tv_item" />
                    <TextView
                        android:id="@+id/tv_item"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:paddingLeft="50dp"
                        android:paddingStart="50dp"
                        android:paddingEnd="5dp"
                        android:paddingRight="2dp"
                        android:layout_gravity="bottom"
                        android:gravity="center_vertical"
                        android:layout_marginTop="20dp"

                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:text="@string/incomeLayout"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_marginTop="0dp">
                <RelativeLayout
                    android:id="@+id/top_loans_layout"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:padding="5dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/img_thumbnail2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:layout_marginStart="60dp"
                        android:contentDescription="@drawable/ic_account_balance_black_48dp"
                        android:scaleType="fitXY"
                        android:background="@drawable/ic_account_balance_black_48dp"
                        android:layout_above="@+id/tv_item2" />
                    <TextView
                        android:id="@+id/tv_item2"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:paddingLeft="50dp"
                        android:paddingStart="50dp"
                        android:paddingRight="2dp"
                        android:paddingEnd="5dp"

                        android:layout_gravity="bottom"
                        android:gravity="center_vertical"

                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:layout_marginTop="20dp"
                        android:text="@string/loansLayout"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/how_to_layout"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:padding="5dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/img_how_to"
                        android:contentDescription="@drawable/ic_description_black_48dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:layout_marginStart="60dp"
                        android:scaleType="fitXY"
                        android:background="@drawable/ic_description_black_48dp"
                        android:layout_above="@+id/tv_item_how_to" />
                    <TextView
                        android:id="@+id/tv_item_how_to"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:paddingLeft="50dp"
                        android:paddingStart="50dp"
                        android:paddingRight="2dp"
                        android:paddingEnd="2dp"
                        android:layout_gravity="bottom"
                        android:gravity="center_vertical"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="20dp"

                        android:textSize="20sp"
                        android:text="@string/how_it_works"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />



                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_marginTop="0dp">
                <RelativeLayout
                    android:id="@+id/top_guarantors_layout"
                    android:layout_width="0dp"
                    android:padding="5dp"
                    android:layout_height="160dp"
                    android:layout_weight="1">

                    <ImageView
                        android:contentDescription="@drawable/ic_mail_black_36dp"
                        android:id="@+id/img_thumbnail3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:layout_marginStart="60dp"
                        android:scaleType="fitXY"

                        android:background="@drawable/ic_mail_black_36dp"
                        android:layout_above="@+id/tv_item3" />
                    <TextView
                        android:id="@+id/tv_item3"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:paddingLeft="50dp"
                        android:paddingRight="2dp"
                        android:paddingStart="50dp"
                        android:paddingEnd="2dp"
                        android:layout_gravity="bottom"
                        android:gravity="center_vertical"
                        android:layout_marginTop="20dp"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:text="@string/contact_us"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/top_reports_layout"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:padding="5dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/img_thumbnail4"
                        android:contentDescription="@drawable/ic_format_size_black_36dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:layout_marginStart="60dp"
                        android:scaleType="fitXY"
                        android:background="@drawable/ic_format_size_black_36dp"
                        android:layout_above="@+id/tv_item4" />
                    <TextView
                        android:id="@+id/tv_item4"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:paddingLeft="50dp"
                        android:paddingStart="50dp"
                        android:paddingRight="2dp"
                        android:paddingEnd="2dp"
                        android:layout_gravity="bottom"
                        android:gravity="center_vertical"
                        android:textColor="@android:color/black"

                        android:layout_marginTop="20dp"
                        android:textSize="20sp"
                        android:text="@string/faqs"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />



                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</android.support.v4.widget.DrawerLayout>
