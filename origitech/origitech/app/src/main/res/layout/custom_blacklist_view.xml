<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvtdealername"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/PrimaryColor"
            android:text="Dealer Name"

            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/txtshopname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="shopname"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:layout_below="@id/tvtdealername"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/txtlocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:layout_below="@id/txtshopname"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/txtoffence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Offence type"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_alignTop="@+id/txtshopname"
            android:layout_alignLeft="@+id/btncasestatus"
            android:layout_alignStart="@+id/btncasestatus" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="case status"
            android:background="@color/red"
            android:textSize="@dimen/android_small"
            android:id="@+id/btncasestatus"
            android:layout_alignBottom="@+id/tvtdealername"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</android.support.v7.widget.CardView>